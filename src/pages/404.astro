---
import BaseLayout from "../layouts/BaseLayout.astro";
import ToggleTheme from "../components/ToggleTheme.astro";
import Wallpaper from "../components/Wallpaper.astro";
---

<BaseLayout>
    <Wallpaper>
        <ToggleTheme />
        <h1 class="mb-5 text-4xl font-bold">404 Not Found</h1>
        <p class="mb-2">お探しのページは見つかりませんでした。。</p>
        <div class="tooltip tooltip-bottom" data-tip="Home">
            <a href="/">
                <button class="btn btn-ghost text-lg">
                    <i class="fa-solid fa-house"></i>
                </button>
            </a>
        </div>
    </Wallpaper>
</BaseLayout>
