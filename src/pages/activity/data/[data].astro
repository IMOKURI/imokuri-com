---
import BaseLayout from "../../../layouts/BaseLayout.astro"
import DimWallpaper from "../../../components/DimWallpaper.astro"
import Footer from "../../../components/Footer.astro"
import NavBar from "../../../components/NavBar.astro"
import ToggleTheme from "../../../components/ToggleTheme.astro"
import { getCollection, render } from "astro:content"
import type { CollectionEntry } from "astro:content"

export async function getStaticPaths() {
  const posts = (await getCollection("data")).sort((a, b) => b.data.updated.valueOf() - a.data.updated.valueOf())
  return posts.map(post => ({
    params: { data: post.id },
    props: { post }
  }))
}

interface Props {
  post: CollectionEntry<"data">
}
const { post } = Astro.props

const { Content } = await render(post)
const { title } = post.data
---

<BaseLayout>
  <DimWallpaper>
    <NavBar />
    <ToggleTheme />
    <main class="container mx-auto w-5/6 lg:w-2/3">
      <article class="prose max-w-none">
        <h1>{title}</h1>
        <p class="text-sm">
          Updated on {post.data.updated.toLocaleDateString()}
        </p>
        <hr />
        <Content />
      </article>
    </main>
    <Footer />
  </DimWallpaper>
</BaseLayout>
