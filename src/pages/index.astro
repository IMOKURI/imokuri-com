---
import BaseLayout from "../layouts/BaseLayout.astro";
import ToggleTheme from "../components/ToggleTheme.astro";
import Wallpaper from "../components/Wallpaper.astro";
import { SITE_TITLE } from "../config";
---

<BaseLayout>
    <Wallpaper>
        <ToggleTheme />
        <main>
            <h1 class="mb-5 text-4xl font-bold">{SITE_TITLE}</h1>
            <p class="mb-2">
                Hi, I'm SUGIYAMA Yoshio who is an infrastructure / ML engineer
                at HPE. I like IMO and KURI.
            </p>
            <button class="btn btn-ghost text-lg"
                ><a href="/about" aria-label="About Me" title="About Me"
                    ><i class="fa-solid fa-user"></i></a
                ></button
            >
            <button class="btn btn-ghost text-lg"
                ><a href="/blog" aria-label="Blog" title="Blog"
                    ><i class="fa-solid fa-pencil"></i></a
                ></button
            >
            <button class="btn btn-ghost text-lg"
                ><a href="/project" aria-label="Project" title="Project"
                    ><i class="fa-solid fa-code"></i></a
                ></button
            >
        </main>
    </Wallpaper>
</BaseLayout>
