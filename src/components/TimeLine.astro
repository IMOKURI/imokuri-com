---
const { title, subtitle, desc } = Astro.props;
---

<div class="flex">
    <div class="education__time">
        <span class="w-3 h-3 bg-accent block rounded-full mt-2.5"></span>
        <span
            class="education__line bg-accent block h-full w-[2px] translate-x-[5px]"
        ></span>
    </div>
    <div class="experience__data bd-grid px-5">
        <h3 class="text-lg mb-1">{title}</h3>
        <span class="font-light">{subtitle}</span>
        <p class="my-2 text-justify">
            {desc}
        </p>
    </div>
</div>
